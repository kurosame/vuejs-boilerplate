{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "lib": [
      "dom",
      "es2015"
    ],
    "sourceMap": true,
    "strict": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/ts/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/ts/**/*.ts",
    "test/unit/specs/ts/**/*.spec.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}