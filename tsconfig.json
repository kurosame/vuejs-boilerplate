{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"],
    "module": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": { "@/*": ["src/*"] },
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  },
  "include": ["src/**/*.vue", "src/**/*.ts", "test/unit/specs/**/*.spec.ts"],
  "exclude": ["node_modules"]
}
